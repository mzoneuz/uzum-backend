  "scripts": {
    "dev": "nodemon",
    "clean": "rm -rf dist",
    "lint:fix": "eslint . --fix",
    "build": "yarn clean && tsc",
    "typecheck": "tsc --noEmit true",
    "stop": "pm2 stop ecosystem.config.js",
    "start": "pm2 start ecosystem.config.js",
    "lint": "eslint . --quiet --max-warnings 0",
    "restart": "pm2 restart ecosystem.config.js",
    "format": "prettier --write \"**/*.{json,js,ts,md,html}\""
  },
  "author": {
    "name": "Suhrobbek Soatov",
    "url": "https://soatov.uz",
    "email": "svkhrobbeck@gmail.com"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dedent": "^1.5.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "form-data": "^4.0.2",
    "grammy": "^1.35.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.48",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.9",
    "telegraf": "^4.16.3",
